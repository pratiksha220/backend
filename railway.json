{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "python -m venv .venv",
            ". .venv/bin/activate && pip install -r requirements.txt"
          ],
          "packages": [
            "python310",
            "python310Packages.fastapi",
            "python310Packages.uvicorn",
            "python310Packages.requests"
          ]
        },
        "build": {
          "cmds": [
            "cp -r frontend/dist ./dist"
          ]
        }
      }
    }
  },
  "deploy": {
    "start": ". .venv/bin/activate && python -m uvicorn main:app --host 0.0.0.0 --port $PORT"
  }
}
